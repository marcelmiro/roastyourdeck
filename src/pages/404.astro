---
import Layout from '../layouts/Layout.astro'
import Fire from '../components/Fire.astro'
---

<Layout title="Page not found | Roast Your Deck" hideIndex>
    <main class="flex flex-col justify-center items-center min-h-screen w-full">
        <Fire className="w-28 h-28" />
        <h1
            class="text-4xl text-gray-900 dark:text-white font-semibold mt-4 mb-8"
        >
            Page not found
        </h1>
        <a
            href="/"
            target="_self"
            class="bg-primary hover:scale-105 transition duration-200 text-stone-800 font-semibold px-6 py-3.5 rounded-full text-lg"
            >Go home</a
        >
    </main>
</Layout>
