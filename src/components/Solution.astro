---
import Container from './Container.astro'
import { solution } from '../data'
---

<div id="solution">
	<Container>
		<div
			class="space-y-6 justify-between text-gray-600 lg:flex flex-row-reverse lg:space-y-0 lg:gap-12 md:items-center"
		>
			<div
				class="lg:w-1/2 relative lg:top-2 max-lg:max-w-md mx-auto shadow-2xl rounded-2xl overflow-hidden"
			>
				<img
					src="/dashboard.png"
					alt="dashboard"
					loading="lazy"
					width={1024}
					height={682}
					class="w-full"
				/>
			</div>
			<div class="lg:w-1/2 flex flex-col">
				<h2
					class="max-lg:mx-auto max-lg:max-w-lg text-3xl font-bold text-gray-900 md:text-4xl dark:text-white max-lg:text-center"
				>
					An end-to-end solution for lenders and investors
				</h2>

				{
					solution.map(({ title, points }) => (
						<div class="mt-8 flex w-full flex-col max-lg:mx-auto max-lg:max-w-sm max-lg:items-center">
							<p class="mb-3 text-gray-50 lg:text-gray-300">
								{title}
							</p>
							<div class="space-y-4 divide-y divide-gray-800 max-lg:inline-block [&>*+*]:pt-4">
								{points.map(({ title, description, icon }) => (
									<div class="flex gap-4 lg:items-center">
										<div
											class="relative flex h-12 w-12 gap-4 overflow-hidden rounded-full opacity-[0.8] [&>svg]:z-[1] [&>svg]:m-auto [&>svg]:h-6 [&>svg]:w-6 [&>svg]:text-gray-700 [&>svg]:dark:text-gray-300"
											set:html={icon}
										>
											<div class="absolute left-0 top-0 z-0 h-full w-full bg-gray-100 dark:bg-gray-900" />
										</div>
										<div class="w-5/6">
											<h3 class="text-lg font-semibold text-gray-700 dark:text-white">
												{title}
											</h3>
											<p class="text-gray-500 dark:text-gray-400">
												{description}
											</p>
										</div>
									</div>
								))}
							</div>
						</div>
					))
				}

